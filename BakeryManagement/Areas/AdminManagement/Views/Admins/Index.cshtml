@model IEnumerable<BakeryManagement.Models.Admin>

@{
    ViewData["Title"] = "Danh Sách Quản Trị Viên";
    Layout = "~/Areas/AdminManagement/Views/Shared/Admin.cshtml";
}

<style>
    /* Định dạng bảng */
    .table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

        .table th, .table td {
            padding: 12px;
            text-align: left;
            border-bottom: 1px solid #ddd;
        }

        .table th {
            background-color: #f4f4f4;
            font-weight: bold;
        }

    /* Định dạng các liên kết (Sửa, Chi Tiết, Xóa) */
    a {
        text-decoration: none;
        color: #007bff;
        margin-right: 10px;
    }

        a:hover {
            color: #0056b3;
        }

        /* Thêm màu nền cho các liên kết khi hover */
        a:active {
            background-color: #f0f0f0;
            padding: 5px 10px;
            border-radius: 4px;
        }

    /* Định dạng tiêu đề */
    h1 {
        font-size: 2rem;
        text-align: center;
        margin-bottom: 20px;
    }

    /* Định dạng cho các nút thêm mới */
    p a {
        background-color: #28a745;
        color: white;
        padding: 8px 15px;
        border-radius: 4px;
        text-decoration: none;
    }

        p a:hover {
            background-color: #218838;
        }

</style>
<h1>Danh Sách Quản Trị Viên</h1>

<p>
    <a asp-action="Create">Thêm Mới Quản Trị Viên</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Phone)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Role)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Password)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Role)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdatedAt)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.AdminId">Sửa</a>
                    <a asp-action="Details" asp-route-id="@item.AdminId">Chi Tiết</a>
                    <a asp-action="Delete" asp-route-id="@item.AdminId">Xóa</a>
                </td>
            </tr>
        }
    </tbody>
</table>
